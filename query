  <script>
  var map;
  var iconNightlife = 'https://foursquare.com/img/categories/nightlife/default.png';
    function loadPins (data) {
      var items, markers_data = [];
      if (item.breweries === choice) {
        items = data.venues;
        for (var i = 0; i < items.length; i++) {
          var item = items[i];
          if (item.location.lat != undefined && item.location.lng != undefined) {
            markers_data.push({
              lat : item.location.lat,
              lng : item.location.lng,
              restaurant : item.name,
              icon : {
                size : new google.maps.Size(32, 32),
                url : iconNightlife
              }
            });
          }
        }
      }
      map.addMarkers(markers_data);
    }
      
    $(document).on('click', '.pan-to-marker', function(e) {
      e.preventDefault();
      var position, lat, lng, $index;
      $index = $(this).data('marker-index');
      position = map.markers[$index].getPosition();
      lat = position.lat();
      lng = position.lng();
      map.setCenter(lat, lng);
    });
    $(document).ready(function(){
      
      map = new GMaps({
        div: '#map',
        lat: 48.4209650,
        lng: -123.37332
      });
      map.on('marker_added', function (marker) {
        var index = map.markers.indexOf(marker);
        $('#results').append('<li><a href="#" class="pan-to-marker" data-marker-index="' + index + '">' + marker.restaurant + '</a></li>');
        if (index == map.markers.length - 1) {
          map.fitZoom();
        }
      });
//plotting beer
   (function() {
  var imbibe = "url of data here";
  $.getJSON( imbibe, {
    name: "The Drake",
    coordinate: "0 0",
    breweries: "Phillips"
  })
      imbibe.done(loadPins);
    });
    </script>

